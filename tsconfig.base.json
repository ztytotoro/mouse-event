{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": "./",
        "strict": true,
        "lib": ["dom", "es2018"],
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["demo", "lib"]
}
